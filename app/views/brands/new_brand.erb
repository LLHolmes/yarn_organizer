<h2>Add a new brand:</h2>
<form action="/brands/new" method="post">
  <label for="name">Name: </label><input type="text" name="name" required><br>
  <label for="material">Select Material: </label>
  <select name="material">
    <option value="Acrylic" selected> Acrylic </option>
    <option value="Cotton"> Cotton </option>
    <option value="Wool"> Wool </option>
    <option value="Specialty"> Specialty </option>
  </select><br>
  <label for="weight">Select Gauge: </label>
  <select name="weight">
    <option value="0"> 0 - Lace </option>
    <option value="1"> 1 - Super Fine </option>
    <option value="2"> 2 - Fine </option>
    <option value="3"> 3 - Light </option>
    <option value="4" selected> 4 - Medium </option>
    <option value="5"> 5 - Bulky </option>
    <option value="6"> 6 - Super Bulky </option>
    <option value="7"> 7 - Jumbo </option>
    <option value="Novelty"> Novelty </option>
  </select><br>
  <label for="skein_weight">Skein weight: </label><input type="text" name="skein_weight"> oz.<br>
  <label for="skein_length">Skein length: </label><input type="text" name="skein_length"> yd.<br>
  <label for="hook">Recommended crochet hook: </label><input type="text" name="hook"><br>
  <label for="needle">Recommended knitting needle: </label><input type="text" name="needle"><br>
  <br>
  <input type="submit" value="Add Brand">
</form>
