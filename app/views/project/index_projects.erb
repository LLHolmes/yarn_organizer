<h1>Your Projects</h1>
<% if !@wip.empty? %>
  <h3>In Progress:</h3>
    <% @wip.each do |project| %>
    <div>
      <a href="/projects/<%= project.id %>"><%= project.name %></a>
    </div>
    <% end %>
<% end %>

<% if !@upcoming.empty? %>
  <h3>Upcoming:</h3>
    <% @upcoming.each do |project| %>
    <div>
      <a href="/projects/<%= project.id %>"><%= project.name %></a>
    </div>
    <% end %>
<% end %>

<% if !@finished.empty? %>
  <h3>Finished:</h3>
    <% @finished.each do |project| %>
    <div>
      <a href="/projects/<%= project.id %>"><%= project.name %></a>
    </div>
    <% end %>
<% end %>

<p><a href="/projects/new">New Project</a></p>
