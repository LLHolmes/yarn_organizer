<h1>My Accessories</h1>

<% current_user.accessories.each do |acc| %>
  <div>
    <h3><a href="/accessories/<%= acc.id %>"><%= acc.name %></a></h3>
    <label>Current Project: <a href="/projects/<%= acc.project.id %>"><%= acc.project.name %></a></label>

    <form action="/accessories/<%= acc.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <select name="project_id">
        <% current_user.projects.each do |project| %>
          <option value="<%= project.id %>"> <%= project.name %> </option>
        <% end %>
      </select>
      <input type="submit" value="Switch Project">
    </form>
  </div>
<% end %>

<br>

<form action="/accessories/new" method="get">
  <input type="submit" value="Add Tool">
</form>
